<section class="row">
  <div class="column">
    <h2>Create New Post</h2>

    <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-text">Text</label>
        <textarea id="post-text" name="post-text"></textarea>
      </div>
      <button type="submit" class="btn">Create</button>
    </form>

    {{!-- Loop over each object in the posts array --}}
    <div class="post-list">
      <ul class="post-list">
        {{#each posts as |post|}}
        <li>
          {{> post-info post}}
          <p>Created by {{../name}} on {{format_date post.date_created}}</p>
          <button class="edit-btn"> Edit </button>
          <button class="delete-btn"> Delete </button>
        </li>
        {{/each}}
      </ul>
    </div>

  </div>

</section>

<!--Scripts-->
<script src="/js/add-post.js"></script>
<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>