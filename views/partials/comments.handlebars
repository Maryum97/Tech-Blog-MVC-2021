{{!-- Loop through all the comments --}}
<div class="comments">
  {{#each comments as |comment|}}
  <section class="comment">
    <div class="meta">
      {{user.name}} on {{format_date post.date_created}}:
    </div>
    <div class="text">
      "{{comment.text}}"
    </div>
  </section>
  {{/each}}
</div>